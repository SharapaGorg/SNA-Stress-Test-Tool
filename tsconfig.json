{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "server"
  ],
  // Only compile files under src/
  "exclude": [
    "node_modules",
    "dist"
  ]
  // Never compile these
}
