{
  "name": "SNA-Stress-Test-Tool",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail -n \"Client,Server\" \"npm run dev:client\" \"npm run dev:server\"",
    "dev:server": "cross-env NODE_ENV=development nodemon --watch server --ext ts --exec ts-node server/index.ts",
    "dev:client": "cross-env NODE_ENV=development vite",
    "clean": "rimraf ./dist",
    "build": "npm run clean && npm run build:client && npm run build:server",
    "build:client": "cd client && vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "start": "cross-env NODE_ENV=production node dist/server/index.js"
  },

  "packageManager": "yarn@4.5.2",
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.26.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "express": "^5.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "socks-proxy-agent": "^8.0.5"
  }
}
